<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjektWedkarski.MainPage"
             Title="Forum Wędkarskie">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <!-- body  -->

            <StackLayout Padding="10">
                <Label Text="Forum Wędkarskie" FontSize="Large" HorizontalOptions="Center" />

                <Button Text="Dodaj nowy post" Clicked="OnAddPostClicked"/>

                <ListView x:Name="PostsListView">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Title}" Detail="{Binding Content}" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
